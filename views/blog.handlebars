<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div>
{{#if logged_in}}
    <form id="comment-form">
      <textarea id="comment-content" placeholder="Leave a comment..."></textarea>
      <button type="submit">Submit Comment</button>
    </form>
    {{/if}}
    
    <section>
      <h3>Comments:</h3>
      {{#each comments}}
        <div>
          <p><strong>{{name}}</strong> - {{date_created}}</p>
          <p>{{content}}</p>
        </div>
      {{/each}}
    </section>

</div>

<script src="/js/comment.js"></script>