<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  
</div>

<div>
   {{#if logged_in}}
   <button class="btn btn-sm btn-warning" data-id="{{blog.id}}">Update</button>
    {{/if}}
      <h3>Leave a comment:</h3>
      {{#if logged_in}}
    <form id="comment-form">
      <textarea id="comment-content" placeholder="Leave a comment..."></textarea>
      <button type="submit">Submit Comment</button>
    </form>
    {{/if}}

      <h3>Comments:</h3>
      {{#each comments}}
        <div>
         <p>{{content}}</p>
        <p> Created by <strong>{{user.name}}</strong> on {{format_date date_created}}</p>
        
        </div>
      {{/each}}
    </section>

</div>

<script src="/js/comment.js"></script>
<script src="/js/update.js"></script>
